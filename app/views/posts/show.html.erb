<h1>Show post</h1>

<h3>Caption: <%= @post.caption %></h3>
<h3>By: <%= @user.email %></h3>
<br />

<% if current_user === @user %>
  <%= link_to "Edit", edit_post_url(@post) %>
  <%= link_to "Delete", @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= render "comments/form" %>

<h2>Comments(<%= @post.comments.length %>)</h2>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @post.comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= User.find(comment.user_id).email %></td>

        <% if current_user.id === comment.user_id %>
          <td><%= link_to "Edit", edit_post_comment_path(@post.id, comment.id) %></td>
          <td><%= link_to "Delete", post_comment_path(@post.id, comment.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>