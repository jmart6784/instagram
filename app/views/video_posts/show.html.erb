<h1>Show Video post</h1>

<%= video_tag url_for(@post.clip), controls: "" %>
<h3>Caption: <%= @post.caption %></h3>
<h3>By: <%= @user.email %></h3>
<br />

<% if current_user === @user %>
  <%= link_to "Edit", edit_video_post_url(@post) %>
  <%= link_to "Delete", @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= render "comments/form" %>

<h2>Comments(<%= @post.comments.length %>)</h2>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Email</th>
      <th>Likes</th>
    </tr>
  </thead>
  <tbody id="parent-comments-div">
    <% @post.comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= User.find(comment.user_id).email %></td>

        <td>
          <% comment_like_exists = Like.where(comment_id: comment.id, user_id: current_user.id) == [] ? "Like" : "Unlike" %>

          <%= link_to comment_like_exists, ajax_likes_update_like_path(id: comment.id, type: "comment", html_id: "likeable_comment_id_#{comment.id}", html_count_id: "comment_like_count#{comment.id}"), method: :put, remote: true, id: "likeable_comment_id_#{comment.id}" %>
        </td>

        <td>
          <p id=<%= "comment_like_count#{comment.id}" %>>
            <%= "#{comment.likes.count} Like".pluralize(comment.likes.count) %>
          </p>
        </td>

        <% if current_user.id === comment.user_id %>
          <td><%= link_to "Edit", edit_video_post_comment_path(@post.id, comment.id) %></td>
          <td><%= link_to "Delete", video_post_comment_path(@post.id, comment.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>