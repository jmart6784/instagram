<div>
  <h1>Video post Form</h1>

  <% if @video_post.errors.any? %>
    <div>
      <p><%= flash[:danger] %></p>
      <ul>
        <% @video_post.errors.full_messages.each do |msg| %>
          <li><span><%= msg %></span></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= form_with model: @video_post, local: true do |f| %>
    <%= f.text_area :caption, placeholder: "Share your thoughts", required: true %><br>

    <% if false %>
      <% if @video_post.video.attached? && @video_post.video.content_type.in?(%(image/jpeg image/png)) %>
        <%= video_tag @video_post.video.variant(resize: '300x300!') %><br>
      <% end %>

      <div>
        <%= f.label :clip, "Share video" %><br>
        <%= f.file_field :clip %>
      </div>
    <% end %>

    <%= f.submit "Share" %>
  <% end %>
</div>