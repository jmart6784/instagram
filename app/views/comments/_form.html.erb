<% if @comment.errors.any? %>
  <div>
    <p><%= flash[:danger] %></p>
    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><span><%= msg %></span></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>Comment</h2>

<%= form_for [ @post, @comment ], html: {remote: true} do |f| %>
  <%= f.text_area :body, placeholder: "Share your thoughts", id: "comment-text-field", required: true, maxlength: 5000 %><br>


  <%= f.submit "Comment" %>
<% end %>

<% if false %>
<%= form_for [ @post, @comment ] do |f| %>
  <%= f.text_area :body, placeholder: "Share your thoughts", required: true %><br>


  <%= f.submit "Comment" %>
<% end %>
<% end %>